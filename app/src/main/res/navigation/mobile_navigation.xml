<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.cs426.asel.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.cs426.asel.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_emails"
        android:name="com.cs426.asel.ui.emails.EmailsFragment"
        android:label="@string/title_emails"
        tools:layout="@layout/fragment_emails" >
        <action
            android:id="@+id/navigate_to_email_detail"
            app:destination="@id/navigation_email_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_email_detail"
        android:name="com.cs426.asel.ui.emails.EmailDetailFragment"
        android:label="@string/title_email_detail"
        tools:layout="@layout/fragment_email_detail">

        <argument
            android:name="emailId"
            app:argType="integer" />
    </fragment>

</navigation>